<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="125dp"
    >

    <ImageView

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/portretImage"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:transitionName="@string/transition_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:text="Artist"
        android:id="@+id/artistText"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/portretImage"
        android:layout_toEndOf="@+id/portretImage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="music style"
        android:id="@+id/genreText"
        android:layout_alignLeft="@+id/artistText"
        android:layout_alignStart="@+id/artistText"
        android:layout_below="@+id/artistText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0 albums, 0 songs"
        android:id="@+id/songsText"
        android:layout_alignBottom="@+id/portretImage"
        android:layout_alignLeft="@+id/genreText"
        android:layout_alignStart="@+id/genreText" />
</RelativeLayout>